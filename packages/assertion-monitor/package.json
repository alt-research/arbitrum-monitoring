{
  "name": "assertion-monitor",
  "version": "1.0.0",
  "main": "dist/main.js",
  "dependencies": {
    "@arbitrum/sdk": "^4.0.0",
    "@types/yargs": "17.0.32",
    "typescript": "^5.4.5",
    "utils": "*",
    "viem": "^2.7.9",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "ts-node": "^10.9.2",
    "vitest": "^3.0.5"
  },
  "scripts": {
