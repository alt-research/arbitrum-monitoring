# -------- Stage 1: Build --------
FROM node:22-slim AS builder

WORKDIR /app

COPY . .

RUN yarn install --immutable

RUN yarn workspace assertion-monitor build

# -------- Stage 2: Runtime --------
FROM node:22-slim

WORKDIR /app

RUN apt-get update && \
    apt-get install -y jq curl && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app ./

COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/yarn.lock ./yarn.lock


RUN chmod +x ./packages/assertion-monitor/entrypoint.sh

WORKDIR /app/packages/assertion-monitor
ENTRYPOINT ["/app/packages/assertion-monitor/entrypoint.sh"]

